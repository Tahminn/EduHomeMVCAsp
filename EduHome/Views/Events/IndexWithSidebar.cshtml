@model Paginate<Event>
@{
    ViewData["Title"] = "Event Page";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area event-area three pt-150 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @foreach (var eventt in Model.Datas)
                    {
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="single-event mb-60">
                                <div class="event-img">
                                    <a asp-action="Details" asp-route-id="@eventt.Id">
                                        <img src="~/assets/img/event/@eventt.Image" style="height: 250px;" alt="event">
                                        <div class="course-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                    <div class="event-date">
                                        <h3>@eventt.Date.ToString("m").Split(" ").LastOrDefault() <span>@eventt.Date.ToString("m").Split(" ").FirstOrDefault().Substring(0,3)</span></h3>
                                    </div>
                                </div>
                                <div class="event-content text-left">
                                    <h4><a asp-action="Details">@eventt.Id @eventt.Name</a></h4>
                                    <ul>
                                        <li><span>time:</span> @eventt.Date.ToString("t")</li>
                                        <li><span>venue</span> @eventt.Venue</li>
                                    </ul>
                                    <div class="event-content-right">
                                        <a class="default-btn" asp-action="Details" asp-route-id="@eventt.Id">join now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row my-3" style="justify-content: center;">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center" style="display: flex;">
                            <li class="page-item @(Model.HasPrevious ? "": "disabled")">
                                <a class="page-link" asp-action="IndexWithSidebar" asp-route-after="@(ViewBag.EventCount-((Model.CurrentPage-2)*Model.Datas.Count()))" asp-route-takeTeacher="@ViewBag.Take" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="IndexWithSidebar" asp-route-after="@(ViewBag.EventCount - (i - 1) * ViewBag.Take )" asp-route-takeTeacher="@ViewBag.Take" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNext ? "": "disabled")">
                                <a class="page-link" asp-action="IndexWithSidebar" asp-route-after="@(ViewBag.EventCount-((Model.CurrentPage)*Model.Datas.Count()))" asp-route-takeTeacher="@ViewBag.Take" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            @await Component.InvokeAsync("Sidebar")
        </div>
    </div>
</div>
<!-- Blog End -->
